#!/usr/bin/env bash

#see http://jeroenjanssens.com/2013/08/16/quickly-navigate-your-filesystem-from-the-command-line.html 

_completemarks() {
	local cur
	cur=${COMP_WORDS[COMP_CWORD]}
	subs=`expr "${MARKS_DIR}" : ".*\/\(.*\)" `
	COMPREPLY=($(compgen -S/ -d ${MARKS_DIR}/$cur | sed s/.*${subs}.// ))
}

complete -o nospace -F _completemarks j unmark
