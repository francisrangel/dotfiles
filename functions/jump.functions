#!/usr/bin/env bash

#see http://jeroenjanssens.com/2013/08/16/quickly-navigate-your-filesystem-from-the-command-line.html

function j { 
  cd -P "$MARKS_DIR/$1" 2>/dev/null || echo "No such mark: $1"
}

function mark { 
  mkdir -p "$MARKS_DIR"; ln -s "$(pwd)" "$MARKS_DIR/$1"
}

function unmark { 
  rm -i "$MARKS_DIR/$1"
}

function jl {
  \ls -l "$MARKS_DIR" | tail -n +2 | sed 's/  / /g' | cut -d' ' -f9- | awk -F ' -> ' '{printf "%-10s -> %s\n", $1, $2}'
}
