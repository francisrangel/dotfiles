[alias]
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	st = status
	co = checkout
	pr = pull --rebase
	aa = add -A
	ci = commit -v
	ba = branch -a
	bd = branch -D
	fp = fetch -p
	ph = push
	df = diff
	ri = rebase -i
	l = log
	s = show
	rh = reset HEAD --hard
	pom = push origin master
[core]
	excludesfile = /Users/francisrangel/.gitignore_global
	editor = /usr/local/bin/vim
